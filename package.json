{
  "name": "llm-chat",
  "displayName": "LLM chat",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llm-chat-container",
          "title": "LLM Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "llm-chat-container": [
        {
          "id": "llmChat.chatView",
          "name": "Chat",
          "type": "webview",
          "contextualTitle": "LLM Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "llmChat.focus",
        "title": "Focus LLM Chat View"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0"
  },
  "dependencies": {
    "markdown-it": "^13.0.1"
  }
}
